<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bonuspack_bubble"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="2"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/bubble_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxEms="22"
            android:text="desc"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxEms="22"
            android:text="weight"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxEms="22"
            android:text="type"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="5dp"
        android:text="request" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bubble_agenda"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="0"
            android:padding="2dp"
            android:src="@drawable/icons8_address_book_30"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/bubble_favorie"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="0"
            android:padding="2dp"
            android:src="@drawable/icons8_heart_24"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/bubble_call"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_weight="0"
            android:padding="2dp"
            android:src="@drawable/icons8_phone_64"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>